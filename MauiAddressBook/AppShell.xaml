<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAddressBook.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    
    xmlns:views="clr-namespace:MauiAddressBook.Views"
    
    xmlns:local="clr-namespace:MauiAddressBook"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiAddressBook">

    <ShellContent
        Title="Contact List"
        ContentTemplate="{DataTemplate views:ContactListPage}"
        Route="ContactListPage" />

    <ShellContent
        Title="Add Contact"
        ContentTemplate="{DataTemplate views:ContactAddPage}"
        Route="ContactAddPage" />

    <ShellContent
        Title="Edit Contact"
        ContentTemplate="{DataTemplate views:ContactEditPage}"
        Route="ContactEditPage" />

</Shell>
